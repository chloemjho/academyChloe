@page
@model ToDoListWebApp.Pages.ListModel

<a href="/new">Create Task</a>
<h1>ToDo List</h1>

@if (Model.ToDos ==  null)
{
    <p>No task</p>
}
else {
<table>
    <thead>
        <tr>
            <th>Id</th>
            <th>Task</th>
            <th>Date</th>
            <th>Status</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var todo in Model.ToDos)
        {
            <tr>
                <td>@todo.Id</td>
                <td>@todo.Task</td>
                <td>@todo.DateAdded</td>
                <td>@todo.Status</td>
            </tr>
        }
    </tbody>
</table>
}